<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
		xmlns:c="http://www.springframework.org/schema/c" 
		xmlns:p="http://www.springframework.org/schema/p">

	<description>Example configuration to get you started.</description>

	<context:component-scan base-package="us.kwons.spring.ch2" />
	<bean id="provider" class="us.thekwons.spring.ch2.HelloWorldMessageProvider" />
	<bean id="renderer" class="us.thekwons.spring.ch2.StandardOutMessageRenderer" p:messageProvider-ref="provider" />
</beans>
